{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": ["src", "test", "scripts"]
}
