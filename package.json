{
  "name": "crossbell",
  "version": "0.0.0",
  "description": "JavaScript SDK to interact with Crossbell",
  "keywords": [
    "crossbell",
    "eth",
    "contract"
  ],
  "bugs": {
    "url": "https://github.com/Crossbell-Box/crossbell.js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Crossbell-Box/crossbell.js.git"
  },
  "license": "MIT",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build-fast -- --dts-resolve",
    "build-fast": "tsup",
    "gen-abi-types": "abi-types-generator ./src/contract/abi/abi.json --output=./src/contract/abi/ --provider=ethers_v5",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "watch": "npm run build-fast -- --watch"
  },
  "dependencies": {
    "ethers": "^5.6.3",
    "ts-mixer": "^6.0.1"
  },
  "devDependencies": {
    "ethereum-abi-types-generator": "^1.3.2",
    "prettier": "^2.6.0",
    "tsup": "^5.12.1",
    "typescript": "^4.6.3",
    "vitest": "^0.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
