{
  "name": "crossbell.js",
  "version": "0.4.0",
  "description": "JavaScript SDK to interact with Crossbell",
  "keywords": [
    "crossbell",
    "eth",
    "contract"
  ],
  "bugs": {
    "url": "https://github.com/Crossbell-Box/crossbell.js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Crossbell-Box/crossbell.js.git"
  },
  "license": "MIT",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build-fast -- --dts-resolve",
    "build-fast": "tsup",
    "gen-abi-types": "typechain --target ethers-v5 --out-dir ./src/contract/abi/types ./src/contract/abi/abi.json",
    "gen-doc": "typedoc",
    "prepublishOnly": "npm run gen-doc && npm run build",
    "test": "vitest run",
    "watch": "npm run build-fast -- --watch"
  },
  "dependencies": {
    "browser-or-node": "^2.0.0",
    "ethers": "^5.6.3",
    "ts-mixer": "^6.0.1"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^10.0.0",
    "@types/node": "^17.0.24",
    "prettier": "^2.6.0",
    "tsup": "^5.12.1",
    "typechain": "^8.0.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.3",
    "undici": "^5.0.0",
    "vitest": "^0.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
