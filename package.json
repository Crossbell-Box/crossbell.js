{
  "name": "crossbell.js",
  "version": "0.18.1",
  "description": "JavaScript SDK to interact with Crossbell",
  "keywords": [
    "crossbell",
    "eth",
    "contract",
    "web3"
  ],
  "bugs": {
    "url": "https://github.com/Crossbell-Box/crossbell.js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Crossbell-Box/crossbell.js.git"
  },
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./dist": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build-fast -- --dts-resolve",
    "postbuild": "node ./scripts/post-build.js",
    "build-fast": "tsup",
    "update-abi": "node ./scripts/update-abi.js",
    "gen-doc": "typedoc",
    "prepublishOnly": "npm run gen-doc && npm run build",
    "test": "vitest run",
    "watch": "npm run build-fast -- --watch"
  },
  "dependencies": {
    "@crossbell/ipfs-fetch": "^0.0.15",
    "async-retry": "^1.3.3",
    "ethers": "^5.7.2",
    "fetch-undici": "^3.0.1",
    "p-limit": "^3.1.0",
    "ts-mixer": "^6.0.3",
    "web3-providers-ws": "1.9.0"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^10.2.0",
    "@types/async-retry": "^1.4.5",
    "@types/node": "^18.15.5",
    "prettier": "^2.8.5",
    "tsup": "^6.7.0",
    "typechain": "^8.1.1",
    "typedoc": "^0.23.28",
    "typescript": "^4.9.5",
    "vitest": "^0.29.7"
  },
  "publishConfig": {
    "access": "public"
  }
}
