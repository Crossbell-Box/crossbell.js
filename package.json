{
  "name": "crossbell.js",
  "version": "0.7.5",
  "description": "JavaScript SDK to interact with Crossbell",
  "keywords": [
    "crossbell",
    "eth",
    "contract",
    "web3"
  ],
  "bugs": {
    "url": "https://github.com/Crossbell-Box/crossbell.js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Crossbell-Box/crossbell.js.git"
  },
  "license": "MIT",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build-fast -- --dts-resolve",
    "postbuild": "node ./scripts/post-build.js",
    "build-fast": "tsup",
    "update-abi": "node ./scripts/update-abi.js",
    "gen-doc": "typedoc",
    "prepublishOnly": "npm run gen-doc && npm run build",
    "test": "vitest run",
    "watch": "npm run build-fast -- --watch"
  },
  "dependencies": {
    "ethers": "^5.6.8",
    "query-string": "^7.1.1",
    "ts-mixer": "^6.0.1",
    "undici": "^5.4.0",
    "web3-providers-ws": "^1.7.3"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^10.0.0",
    "@types/node": "^17.0.24",
    "prettier": "^2.6.0",
    "tsup": "^6.0.1",
    "typechain": "^8.0.0",
    "typedoc": "^0.22.17",
    "typescript": "^4.7.2",
    "vitest": "^0.14.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
